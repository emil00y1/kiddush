---
const { text, type, href } = Astro.props;
---

<a class={type} href={href}>{text}</a>

<style>
  a {
    display: block;
    font-family: Montserrat, sans-serif;
    font-size: 22px;
    font-weight: 500;

    text-align: center;

    border-radius: 11px;
    padding: 4px 13px 4px 13px;
  }

  .cart {
    background-color: var(--primary);
    color: var(--background);
    width: fit-content;
    margin: 0 auto;
  }
  .cart:hover {
    background-color: var(--secondary);
  }

  .filter {
    font-size: 20px;
    color: var(--kiddushblack);
  }

  .filter_active {
    color: var(--primary);
  }
</style>
