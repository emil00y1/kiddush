---

<MainLayout title="SHOP">
  <Header slot="header" shop="active" />
  <div class="buttonNavigation">
    <Button text="Beers and Drinks" href="#" type="filter" />
    <Button text="Merch" href="#" type="filter" />
    <Button text="View all" href="#" type="filter" />
  </div>
  <section>
    {
      data.map((product) => {
        return <ProductCard data={product} />;
      })
    }
  </section>
  <Banner />
</MainLayout>

<style>
  section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding: 0 14px;
    gap: 14px;
  }
  div {
    display: flex;
  }
</style>

<script>
  const all = document.querySelectorAll(".product_card");

  const buttons = document.querySelectorAll(".buttonNavigation a");
  buttons.forEach((btn) => {
    btn.addEventListener("click", (e) => {
      console.log("ein slay");
      buttons.forEach((b) => b.classList.remove("filter_active"));
      btn.classList.add("filter_active");
      const category = btn.textContent;
      all.forEach((card) => {
        console.log("zwei slay");
        card.classList.add("hide");
        if (card.dataset.category === category) {
          console.log("category is WORK");
          card.classList.remove("hide");
        }
      });
    });
  });
</script>
